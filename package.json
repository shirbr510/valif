{
  "name": "valif",
  "version": "1.0.0",
  "description": "Making JS validations as easy as 1-2-3",
  "main": "index.js",
  "scripts": {
    "build": "babel src/ -d dist/",
    "prepublish": "npm run build",
    "coverage": "npm run coverage:no-report | npm run coverage:report-coveralls & npm run coverage:no-report | npm run coverage:report-codacy",
    "coverage:no-report": "node node_modules/.bin/jest --coverage",
    "coverage:report-codacy":"./node_modules/.bin/codacy-coverage",
    "coverage:report-coveralls":"./node_modules/coveralls/bin/coveralls.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "flow": "flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shirbr510/valif.git"
  },
  "keywords": [
    "js",
    "validation",
    "validations",
    "invalidate",
    "validate",
    "validation",
    "object",
    "easy",
    "fluent"
  ],
  "author": "Shir Brass",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shirbr510/valif/issues"
  },
  "homepage": "https://github.com/shirbr510/valif#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "codacy-coverage": "^2.0.3",
    "coveralls": "^3.0.0",
    "flow-bin": "^0.57.3",
    "jest": "^21.2.1"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
